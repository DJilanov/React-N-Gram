# EditorConfig

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{py,ts,js}]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 1

[*.md]
max_line_length = off
trim_trailing_whitespace = false
